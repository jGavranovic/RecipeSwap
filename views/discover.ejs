    <script>
        function resetTime(){
            const radios = document.getElementsByName('time')
            for (i=0;i<radios.length;i++)
                radios[i].checked = false  
        }

        function filterCards(){
            
            const tags = []
            document.filters.elements['tags[]'].forEach(tag => {
                if (tag.checked)
                    tags.push(tag.value)
            })
            const cards = Array.from(document.getElementsByClassName('card'))
            cards.forEach((card)=>{
                if (tags.every((e) => {
                    return card.dataset.tags.split(',').includes(e)
                }) && (document.filters.elements.time.value == '' || parseInt(card.dataset.time) <= document.filters.elements.time.value))
                    card.classList.remove('d-none')
                else
                    card.classList.add('d-none')
            })
        }
        
    </script>
