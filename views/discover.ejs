        <div class="row pb-5">
            <div class="accordion" id="accordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#filters">Filters</button>
                    </h2>
                    <div class="accordion-collapse collapse" id="filters" data-bs-parent="#accordion">
                        <form name="filters">
                            <div class="accordion-body">
                                <div class="row">
                                    <div class="col d-flex flex-wrap justify-content-start justify-content-md-start">
                                       <!-- <button class="btn btn-outline-success" data-bs-toggle="button">Vegan</button>
                                       <button class="btn btn-outline-success" data-bs-toggle="button">Vegetarian</button>
                                       <button class="btn btn-outline-warning" data-bs-toggle="button">Gluten-free</button>
                                       <button class="btn btn-outline-warning" data-bs-toggle="button">Nut-free</button>
                                       <button class="btn btn-outline-warning" data-bs-toggle="button">Dairy-free</button> -->
                                       <input type="checkbox" name="dietaryPrefs[]" id="vegan" class="btn-check" value="vegan">
                                        <label for="vegan" class="btn btn-outline-success m-1">Vegan</label>
                                        <input type="checkbox" name="dietaryPrefs[]" id="vegetarian" class="btn-check" value="vegetarian">
                                        <label for="vegetarian" class="btn btn-outline-success m-1">Vegetarian</label>
                            
                                        <input type="checkbox" name="dietaryPrefs[]" id="gluten-free" class="btn-check" value="gluten-free">
                                        <label for="gluten-free" class="btn btn-outline-warning m-1">Gluten-free</label>
                            
                                        <input type="checkbox" name="dietaryPrefs[]" id="nut-free" class="btn-check" value="nut-free">
                                        <label for="nut-free" class="btn btn-outline-warning m-1">Nut-free</label>
                            
                                        <input type="checkbox" name="dietaryPrefs[]" id="dairy-free" class="btn-check" value="dairy-free">
                                        <label for="dairy-free" class="btn btn-outline-warning m-1">Dairy-free</label>
                                    </div>
                                    <div class="col d-flex flex-wrap justify-content-md- justify-content-start">
                                        <input type="checkbox" name="ehtnicity[]" id="mediterranean" class="btn-check" value="mediterranean">
                                        <label for="mediterranean" class="btn btn-outline-pinky m-1">Mediterranean</label>
                            
                                        <input type="checkbox" name="ehtnicity[]" id="mexican" class="btn-check" value="mexican">
                                        <label for="mexican" class="btn btn-outline-pinky m-1">Mexican</label>
                            
                                        <input type="checkbox" name="ehtnicity[]" id="indian" class="btn-check" value="indian">
                                        <label for="indian" class="btn btn-outline-pinky m-1">Indian</label>
                            
                                        <input type="checkbox" name="ehtnicity[]" id="chinese" class="btn-check" value="chinese">
                                        <label for="chinese" class="btn btn-outline-pinky m-1">Chinese</label>
                            
                                        <input type="checkbox" name="ehtnicity[]" id="middleeast" class="btn-check" value="middleeast">
                                        <label for="middleeast" class="btn btn-outline-pinky m-1">Middle eastern</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex flex-wrap justify-content-md-start justify-content-start">
                                        <input type="checkbox" name="meal[]" id="breakfast" class="btn-check" value="breakfast">
                                        <label for="breakfast" class="btn btn-outline-purpy m-1">Breakfast</label>
                            
                                        <input type="checkbox" name="meal[]" id="lunch" class="btn-check" value="lunch">
                                        <label for="lunch" class="btn btn-outline-purpy m-1">Lunch</label>
                            
                                        <input type="checkbox" name="meal[]" id="dinner" class="btn-check" value="dinner">
                                        <label for="dinner" class="btn btn-outline-purpy m-1">Dinner</label>
                            
                                        <input type="checkbox" name="meal[]" id="snack" class="btn-check" value="snack">
                                        <label for="snack" class="btn btn-outline-purpy m-1">Snack</label>
                            
                                        <input type="checkbox" name="meal[]" id="dessert" class="btn-check" value="dessert">
                                        <label for="dessert" class="btn btn-outline-purpy m-1">Dessert</label>
                                    </div>
                                    <div class="col d-flex flex-wrap justify-content-md-end justify-content-start">
                                        <input type="radio" name="time" id="15" class="btn-check" value="breakfast">
                                        <label for="15" class="btn btn-outline-secondary m-1">&lt;15 min</label>
                            
                                        <input type="radio" name="time" id="30" class="btn-check" value="lunch">
                                        <label for="30" class="btn btn-outline-secondary m-1">&lt;30 min</label>
                            
                                        <input type="radio" name="time" id="60" class="btn-check" value="dinner">
                                        <label for="60" class="btn btn-outline-secondary m-1">&lt; 1 hr</label>
                            
                                        <input type="radio" name="time" id="90" class="btn-check" value="snack">
                                        <label for="90" class="btn btn-outline-secondary m-1">&lt; 1 hr 30 min</label>
                            
